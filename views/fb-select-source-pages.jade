#page(data-role="page", data-url="#{url}")
    #header(data-role="header")
        a(href="/new/select-type/", data-icon="arrow-l", data-direction="reverse", data-iconpos="notext") Back
        h1 #{subtitle}
        a(href="/", data-icon="home", data-direction="reverse", data-iconpos="notext") Home

        #navbar(data-role="navbar")
            ul
                li
                    a(href="/new/select-source/me", data-transition="none") Me
                li
                    a(href="/new/select-source/friends", data-transition="none") Friends
                li
                    a(href="/new/select-source/pages", data-transition="none", class="ui-btn-active") Pages
                li
                    a(href="/new/select-source/events", data-transition="none") Events
    #content(data-role="content")
        form(method="POST", action="/new/select-source/page")
            input#hidId(type="hidden")
            - if (instanceArray && instanceArray.length) {
            ul(data-role="listview", data-filter="true", data-filter-placeholder="Filter pages...")
                - var newChar = '';
                - instanceArray.forEach(function(page){
                    - if (page.name.charAt(0) !== newChar) {
                    - newChar = page.name.charAt(0);
                    li(data-role="list-divider")= newChar.toUpperCase()
                    - }
                    li
                        a(href="#", data-item-id="#{page.id}")
                            div
                                img(src="http://graph.facebook.com/#{page.id}/picture", alt="#{page.name}")
                                = page.name
                - })
            - } else {
            p No page available.
            - }
    #footer(data-role="footer")
        span &copy; Martin Angers 2011 - Alpha version    
