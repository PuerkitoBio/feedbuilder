#page(data-role="page", data-url="#{url}")
    #header(data-role="header")
        a(href="/new/select-type/", data-icon="arrow-l", data-direction="reverse") Back
        h1 #{subtitle}
        a(href="/", data-icon="home", data-direction="reverse") Home
    #content(data-role="content")
        p
            | Select the source of the Facebook posts you want to include in your feed.
        
        form(method="POST", action="/fb")
            #menuSource(data-role="fieldcontain")
                //- label(for="select-fb-source", class="select") Facebook Source:
                //- br
                select(name="select-fb-source", id="select-fb-source", data-native-menu="false")
                    option(value="myfeed") My News Feed
                    option(value="mywall") My Wall
                    option(value="friendwall", selected) A Friend's Wall
                    option(value="pagewall") A Page's Wall
                    option(value="eventwall") An Event's Wall
        
            input(type="submit", value="Next Step", data-icon="arrow-r", data-iconpos="right")
        a(href="/fb?back=1", data-role="button", data-icon="arrow-l") Back To Feed Source
    #footer(data-role="footer")
        p &copy; Martin Angers 2011 - Alpha version
